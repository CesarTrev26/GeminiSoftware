---
import AISearch from './AISearch';

interface Props {
  variant?: 'transparent' | 'solid' | 'glass';
}

const { variant = 'transparent' } = Astro.props;
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'Inicio', id: 'home' },
  { href: '/servicios', label: 'Servicios', id: 'services' },
  { href: '/portfolio', label: 'Portafolio', id: 'portfolio' },
  { href: '/contacto', label: 'Contacto', id: 'contact' },
];

const variantClasses = {
  transparent: 'bg-transparent',
  solid: 'bg-dark-blue-500',
  glass: 'glass-dark',
};
---

<header 
  id="navbar"
  class:list={[
    'fixed top-0 left-0 right-0 z-50 transition-all duration-500',
    variantClasses[variant],
  ]}
  data-variant={variant}
>
  <nav class="w-full mx-auto px-6 lg:px-12 py-4 lg:py-6">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a 
        href="/" 
        class="relative z-10 group"
        aria-label="Gemini Software - Inicio"
      >
        <div class="relative w-28 h-auto lg:w-40">
          <img 
            src="/img/white-logo.webp" 
            alt="Gemini Software Logo" 
            width="350"
            height="72"
            class="w-full h-auto object-contain transition-transform duration-300 group-hover:scale-110"
          />
          <div class="absolute inset-0 bg-cyan-500/10 blur-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center gap-2">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class:list={[
              'relative px-5 py-2.5 text-white/80 font-medium text-sm tracking-wide transition-all duration-300 rounded-full',
              'hover:text-white hover:bg-white/10',
              'nav-link',
              currentPath === link.href && 'text-white bg-white/10',
            ]}
            data-navlink
          >
            <span class="relative z-10">{link.label}</span>
            {currentPath === link.href && (
              <span class="absolute bottom-0 left-1/2 -translate-x-1/2 w-1 h-1 bg-cyan-400 rounded-full"></span>
            )}
          </a>
        ))}
        
        <!-- CTA Button -->
        <a 
          href="/contacto" 
          class="ml-4 px-6 py-2.5 bg-gradient-to-r from-cyan-500 to-blue-500 text-white font-medium text-sm rounded-full
                 transition-all duration-300 hover:shadow-glow hover:scale-105 active:scale-95"
        >
          <span class="flex items-center gap-2">
            Cotizar Proyecto
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </span>
        </a>
      </div>

      <!-- AI Search (visible on all screens) - Deferred for better initial page load -->
      <AISearch client:idle />

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="lg:hidden relative z-10 p-2 text-white focus:outline-none"
        aria-label="Abrir menú de navegación"
        aria-expanded="false"
      >
        <div class="w-6 h-5 relative flex flex-col justify-between">
          <span class="menu-line w-full h-0.5 bg-white rounded-full transition-all duration-300 origin-left"></span>
          <span class="menu-line w-full h-0.5 bg-white rounded-full transition-all duration-300"></span>
          <span class="menu-line w-3/4 h-0.5 bg-white rounded-full transition-all duration-300 origin-left ml-auto"></span>
        </div>
      </button>
    </div>
  </nav>

  <!-- Mobile Menu Overlay -->
  <div 
    id="mobile-menu"
    class="lg:hidden fixed flex flex-col inset-0 opacity-0 pointer-events-none transition-all duration-500"
    style="z-index: 9999; height: 100dvh; overflow-y: auto; background-color: rgba(1, 24, 61, 0.50); backdrop-filter: blur(10px); -webkit-backdrop-filter: blur(10px);"
    aria-hidden="true"
  >
    <!-- Header Bar with Logo and Close Button -->
    <div class="top-0 left-0 right-0 flex items-center justify-center px-6 py-8 z-10">
      
      <!-- Logo Centered -->
      <a href="/" class="block relative -left-3">
        <img 
          src="/img/white-logo.webp"
          alt="Gemini Software Logo" 
          class="h-8 w-auto object-contain"
        />
      </a>
      
      <!-- Close Button -->
      <button
        id="mobile-menu-close"
        class="absolute right-2 top-1.5 p-2 text-white hover:text-cyan-400 transition-colors"
        aria-label="Cerrar menú"
      >
        <svg class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <div class="flex flex-col flex-1 items-center justify-center px-6 gap-6 h-auto">
      <!-- Mobile Nav Links -->
      <nav class="flex flex-col items-center gap-7">
        {navLinks.map((link, index) => (
          <a
            href={link.href}
            class:list={[
              'mobile-nav-link text-3xl sm:text-3xl font-montserrat-alt font-light transition-all duration-300 translate-y-8 opacity-0 relative',
              currentPath === link.href ? 'text-cyan-400 font-medium' : 'text-white/80 hover:text-cyan-400',
            ]}
            style={`transition-delay: ${index * 100}ms`}
            data-mobile-link
          >
            {link.label}
            {currentPath === link.href && (
              <span class="absolute -bottom-1 left-1/2 -translate-x-1/2 w-2 h-2 bg-cyan-400 rounded-full"></span>
            )}
          </a>
        ))}
      </nav>

      <!-- Mobile CTA -->
      <a 
        href="/contacto"
        class="mobile-nav-link mt-4 px-6 py-3 bg-gradient-to-r from-cyan-500 to-blue-500 text-white font-medium text-1xl sm:text-sm rounded-full
               translate-y-8 opacity-0 transition-all duration-500 hover:shadow-glow"
        style="transition-delay: 400ms"
        data-mobile-link
      >
        Cotizar Proyecto
      </a>

      <!-- Mobile Social Links -->
      <div class="mobile-nav-link flex items-center gap-6 mt-4 translate-y-8 opacity-0" style="transition-delay: 500ms" data-mobile-link>
