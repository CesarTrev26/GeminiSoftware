          </svg>
        </a>
        <a href="https://www.linkedin.com/company/gemini-sftwre/" target="_blank" rel="noopener" class="text-white/60 hover:text-cyan-400 transition-colors">
          <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</header>

<script is:inline>
  // Navbar scroll behavior
  document.addEventListener('DOMContentLoaded', () => {
    // Reset body styles on page load (in case of navigation with menu open)
    document.body.style.position = '';
    document.body.style.top = '';
    document.body.style.width = '';
    document.body.style.overflow = '';
    
    const navbar = document.getElementById('navbar');
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    const mobileLinks = document.querySelectorAll('[data-mobile-link]');
    const menuLines = document.querySelectorAll('.menu-line');
    let isMenuOpen = false;

    // Ensure menu is closed on page load
    if (mobileMenu) {
      mobileMenu.classList.add('opacity-0', 'pointer-events-none');
      mobileMenu.classList.remove('opacity-100', 'pointer-events-auto');
    }

    // Scroll effect
    let lastScroll = 0;
    window.addEventListener('scroll', () => {
      const currentScroll = window.scrollY;
      
      if (navbar) {
        // Add background when scrolled
        if (currentScroll > 50) {
          navbar.classList.add('glass-dark', 'py-2');
          navbar.classList.remove('bg-transparent');
        } else {
          navbar.classList.remove('glass-dark', 'py-2');
          if (navbar.dataset.variant === 'transparent') {
            navbar.classList.add('bg-transparent');
          }
        }

        // Hide/show on scroll direction
        if (currentScroll > lastScroll && currentScroll > 200) {
          navbar.style.transform = 'translateY(-100%)';
        } else {
          navbar.style.transform = 'translateY(0)';
        }
      }
      
      lastScroll = currentScroll;
    });

    // Mobile menu toggle
    let scrollPosition = 0;
    
    function toggleMenu() {
      isMenuOpen = !isMenuOpen;
      
      if (mobileMenu && mobileMenuBtn) {
        mobileMenuBtn.setAttribute('aria-expanded', String(isMenuOpen));
        mobileMenu.setAttribute('aria-hidden', String(!isMenuOpen));
        
        if (isMenuOpen) {
          // Save current scroll position
          scrollPosition = window.scrollY;
          
          mobileMenu.classList.remove('opacity-0', 'pointer-events-none');
          mobileMenu.classList.add('opacity-100', 'pointer-events-auto');
          document.body.style.overflow = 'hidden';
          document.body.style.position = 'fixed';
          document.body.style.width = '100%';
          document.body.style.top = '-' + scrollPosition + 'px';
          
          // Animate menu lines to X
          if (menuLines[0]) {
            menuLines[0].classList.add('rotate-45', 'translate-y-2');
          }
          if (menuLines[1]) {
            menuLines[1].classList.add('opacity-0', 'scale-x-0');
          }
          if (menuLines[2]) {
            menuLines[2].classList.add('-rotate-45', '-translate-y-2', 'w-full');
          }
          
          // Animate links in
          mobileLinks.forEach(function(link) {
            link.classList.remove('translate-y-8', 'opacity-0');
            link.classList.add('translate-y-0', 'opacity-100');
          });
        } else {
          mobileMenu.classList.add('opacity-0', 'pointer-events-none');
          mobileMenu.classList.remove('opacity-100', 'pointer-events-auto');
          
          // Restore scroll position
          document.body.style.position = '';
          document.body.style.top = '';
          document.body.style.width = '';
          document.body.style.overflow = '';
          window.scrollTo(0, scrollPosition);
          
          // Animate menu lines back
          if (menuLines[0]) {
            menuLines[0].classList.remove('rotate-45', 'translate-y-2');
          }
          if (menuLines[1]) {
            menuLines[1].classList.remove('opacity-0', 'scale-x-0');
          }
          if (menuLines[2]) {
            menuLines[2].classList.remove('-rotate-45', '-translate-y-2', 'w-full');
          }
          
          // Reset links
          mobileLinks.forEach(function(link) {
            link.classList.add('translate-y-8', 'opacity-0');
            link.classList.remove('translate-y-0', 'opacity-100');
          });
        }
      }
    }

    if (mobileMenuBtn) {

    // Close button
    const mobileMenuClose = document.getElementById('mobile-menu-close');
    if (mobileMenuClose) {
      mobileMenuClose.addEventListener('click', toggleMenu);
    }
      mobileMenuBtn.addEventListener('click', toggleMenu);
    }
    
    // Close menu on link click
    mobileLinks.forEach(function(link) {
      link.addEventListener('click', function() {
        if (isMenuOpen) toggleMenu();
      });
    });

    // Close on escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && isMenuOpen) toggleMenu();
    });
  });
</script>

<style>
  .menu-line {
    transform-origin: center;
  }
  
  #navbar {
    transition: transform 0.3s ease, background-color 0.3s ease, padding 0.3s ease;
  }
</style>
