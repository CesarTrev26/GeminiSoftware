---
export const prerender = true;

import BaseLayout from '@/layouts/BaseLayout.astro';
import Navbar from '@/components/Navbar.astro';
import Footer from '@/components/Footer.astro';

const seoData = {
  title: 'Servicios | Gemini Software - Desarrollo Web, Apps, Software y Marketing Digital',
  description: 'Descubre nuestros servicios: desarrollo web, aplicaciones móviles, software a medida, marketing digital, diseño UX/UI y mantenimiento. Soluciones tecnológicas para tu empresa.',
};

const services = [
  {
    id: 'desarrollo-web',
    icon: 'code',
    title: 'Desarrollo Web',
    subtitle: 'Sitios web que impulsan tu negocio',
    description: 'Creamos sitios web modernos, rápidos y optimizados para SEO que convierten visitantes en clientes. Desde landing pages hasta plataformas empresariales complejas.',
    features: [
      'Sitios web corporativos y landing pages',
      'E-commerce y tiendas en línea',
      'Aplicaciones web progresivas (PWA)',
      'Portales y plataformas personalizadas',
      'CMS headless y administrables',
      'Optimización de rendimiento (Core Web Vitals)',
    ],
    technologies: ['React', 'Next.js', 'Astro', 'Node.js', 'TypeScript', 'Tailwind CSS'],
    color: 'cyan',
  },
  {
    id: 'apps-moviles',
    icon: 'mobile',
    title: 'Apps Móviles',
    subtitle: 'Tu negocio en el bolsillo de tus clientes',
    description: 'Desarrollamos aplicaciones móviles nativas e híbridas para iOS y Android que destacan en las tiendas de aplicaciones y ofrecen experiencias excepcionales.',
    features: [
      'Apps nativas iOS (Swift) y Android (Kotlin)',
      'Apps híbridas multiplataforma',
      'Integración con APIs y servicios',
      'Notificaciones push y en tiempo real',
      'Geolocalización y mapas',
      'Publicación en App Store y Google Play',
    ],
    technologies: ['React Native', 'Flutter', 'Swift', 'Kotlin', 'Firebase', 'Expo'],
    color: 'blue',
  },
  {
    id: 'software-medida',
    icon: 'software',
    title: 'Software a Medida',
    subtitle: 'Soluciones que se adaptan a ti',
    description: 'Creamos software empresarial personalizado que automatiza procesos, mejora la eficiencia y escala con tu negocio. CRM, ERP, sistemas de gestión y más.',
    features: [
      'Sistemas CRM personalizados',
      'Plataformas ERP empresariales',
      'Automatización de procesos',
      'Integraciones con sistemas existentes',
      'Dashboards y reportes en tiempo real',
      'APIs y microservicios',
    ],
    technologies: ['Node.js', 'Python', 'PostgreSQL', 'MongoDB', 'Redis', 'Docker'],
    color: 'dark-blue',
  },
  {
    id: 'marketing-digital',
    icon: 'marketing',
    title: 'Marketing Digital',
    subtitle: 'Haz crecer tu presencia en línea',
    description: 'Estrategias de marketing digital basadas en datos que generan resultados medibles. SEO, publicidad pagada, redes sociales y más.',
    features: [
      'SEO técnico y de contenido',
      'Publicidad en Google Ads y Meta',
      'Gestión de redes sociales',
      'Email marketing y automatización',
      'Análisis y reportes de rendimiento',
      'Estrategia de contenidos',
    ],
    technologies: ['Google Analytics', 'Google Ads', 'Meta Business', 'SEMrush', 'Mailchimp', 'HubSpot'],
    color: 'cyan',
  },
  {
    id: 'diseno-uxui',
    icon: 'design',
    title: 'Diseño UX/UI',
    subtitle: 'Experiencias que enamoran',
    description: 'Diseñamos interfaces intuitivas y atractivas que mejoran la experiencia del usuario, aumentan la retención y maximizan las conversiones.',
    features: [
      'Investigación de usuarios',
      'Wireframes y prototipos interactivos',
      'Diseño de interfaces (UI)',
      'Design systems y guías de estilo',
      'Pruebas de usabilidad',
      'Diseño responsive y adaptativo',
    ],
    technologies: ['Figma', 'Adobe XD', 'Sketch', 'Framer', 'Principle', 'InVision'],
    color: 'blue',
  },
  {
    id: 'mantenimiento',
    icon: 'maintenance',
    title: 'Mantenimiento y Soporte',
    subtitle: 'Tu tranquilidad, nuestra prioridad',
    description: 'Servicio continuo de mantenimiento, actualizaciones de seguridad, monitoreo y soporte técnico para que tu plataforma funcione sin problemas.',
    features: [
      'Hosting y administración de servidores',
      'Backups automáticos y recuperación',
      'Monitoreo 24/7 y alertas',
      'Actualizaciones de seguridad',
      'Optimización de rendimiento',
      'Soporte técnico dedicado',
    ],
    technologies: ['AWS', 'Google Cloud', 'Vercel', 'DigitalOcean', 'Cloudflare', 'Docker'],
    color: 'dark-blue',
  },
];

const icons: Record<string, string> = {
  code: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />`,
  mobile: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />`,
  software: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />`,
  marketing: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z" />`,
  design: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />`,
  maintenance: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />`,
};

const colorClasses: Record<string, { gradient: string; bg: string; text: string; border: string }> = {
  cyan: {
    gradient: 'from-cyan-500 to-blue-500',
    bg: 'bg-cyan-500/10',
    text: 'text-cyan-500',
    border: 'border-cyan-500/20',
  },
  blue: {
    gradient: 'from-blue-500 to-dark-blue-500',
    bg: 'bg-blue-500/10',
    text: 'text-blue-500',
    border: 'border-blue-500/20',
  },
  'dark-blue': {
    gradient: 'from-dark-blue-400 to-dark-blue-600',
    bg: 'bg-dark-blue-500/10',
    text: 'text-dark-blue-500',
    border: 'border-dark-blue-500/20',
  },
};
---

<BaseLayout title={seoData.title} description={seoData.description}>
  <Navbar variant="transparent" />
  
  <main>
    <!-- Hero Section -->
    <section class="min-h-[60vh] flex items-center justify-center hero-gradient pt-24 pb-16 relative overflow-hidden">
      <div class="absolute inset-0 bg-[linear-gradient(rgba(0,211,255,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(0,211,255,0.03)_1px,transparent_1px)] bg-[size:60px_60px]"></div>
      
      <div class="container mx-auto px-6 lg:px-12 text-center relative z-10">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/5 border border-white/10 mb-6">
          <span class="w-2 h-2 bg-cyan-400 rounded-full"></span>
          <span class="text-white/70 text-sm font-medium">Nuestros Servicios</span>
        </div>
        
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-montserrat-alt font-light text-white mb-6">
          Soluciones digitales
          <span class="block text-cyan-400">para cada necesidad</span>
        </h1>
        
        <p class="text-lg sm:text-xl text-white/60 max-w-2xl mx-auto leading-relaxed">
          Desde el concepto hasta el lanzamiento, te acompañamos en cada paso del camino con servicios integrales de tecnología.
        </p>
      </div>
    </section>

    <!-- Services Detail -->
    <section class="section-padding bg-gray-200">
      <div class="container mx-auto">
        <div class="space-y-24 lg:space-y-32">
          {services.map((service, index) => (
            <article 
              id={service.id}
              class:list={[
                'grid lg:grid-cols-2 gap-12 lg:gap-20 items-center scroll-mt-24',
                index % 2 === 1 && 'lg:[direction:rtl]',
              ]}
            >
              <!-- Content -->
              <div class:list={[index % 2 === 1 && 'lg:[direction:ltr]']}>
                <div class:list={['inline-flex items-center gap-3 mb-6']}>
                  <div class:list={['w-14 h-14 rounded-2xl flex items-center justify-center', colorClasses[service.color].bg]}>
                    <svg 
                      class:list={['w-7 h-7', colorClasses[service.color].text]}
                      fill="none" 
                      viewBox="0 0 24 24" 
                      stroke="currentColor"
                      set:html={icons[service.icon]}
                    />
                  </div>
                  <span class:list={['text-sm font-medium uppercase tracking-wider', colorClasses[service.color].text]}>
                    {service.subtitle}
                  </span>
                </div>
                
                <h2 class="text-3xl sm:text-4xl font-montserrat-alt font-light text-dark-blue-500 mb-6">
                  {service.title}
                </h2>
                
                <p class="text-lg text-dark-blue-500/60 leading-relaxed mb-8">
                  {service.description}
                </p>
                
                <!-- Features -->
                <ul class="grid sm:grid-cols-2 gap-3 mb-8">
                  {service.features.map((feature) => (
                    <li class="flex items-start gap-3">
                      <svg class:list={['w-5 h-5 flex-shrink-0 mt-0.5', colorClasses[service.color].text]} fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                      </svg>
                      <span class="text-dark-blue-500/70 text-sm">{feature}</span>
                    </li>
                  ))}
                </ul>
                
                <!-- Technologies -->
                <div class="flex flex-wrap gap-2 mb-8">
                  {service.technologies.map((tech) => (
                    <span class:list={['px-3 py-1 text-xs font-medium rounded-full', colorClasses[service.color].bg, colorClasses[service.color].text]}>
                      {tech}
                    </span>
                  ))}
                </div>
                
                <a 
                  href="/contacto"
                  class:list={[
                    'inline-flex items-center gap-2 px-6 py-3 rounded-full font-medium transition-all duration-300',
                    'bg-gradient-to-r text-white hover:shadow-glow hover:scale-105',
                    colorClasses[service.color].gradient,
                  ]}
                >
                  Solicitar cotización
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </a>
              </div>
              
              <!-- Visual -->
              <div class:list={['relative', index % 2 === 1 && 'lg:[direction:ltr]']}>
                <div class:list={[
                  'aspect-square rounded-3xl overflow-hidden relative',
                  colorClasses[service.color].border,
                  'border-2 bg-gradient-to-br',
                  service.color === 'cyan' && 'from-cyan-500/5 to-blue-500/10',
                  service.color === 'blue' && 'from-blue-500/5 to-dark-blue-500/10',
                  service.color === 'dark-blue' && 'from-dark-blue-400/10 to-dark-blue-600/20',
                ]}>
                  <!-- Placeholder for service illustration -->
                  <div class="absolute inset-0 flex items-center justify-center">
                    <svg 
                      class:list={['w-32 h-32 opacity-20', colorClasses[service.color].text]}
                      fill="none" 
                      viewBox="0 0 24 24" 
                      stroke="currentColor"
                      set:html={icons[service.icon]}
                    />
                  </div>
                  
                  <!-- Decorative elements -->
                  <div class="absolute top-8 left-8 w-20 h-20 border border-current/10 rounded-full"></div>
                  <div class="absolute bottom-8 right-8 w-16 h-16 border border-current/10 rounded-full"></div>
                  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-40 h-40 border border-current/5 rounded-full"></div>
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="section-padding bg-dark-blue-500 relative overflow-hidden">
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,rgba(0,211,255,0.1),transparent_70%)]"></div>
      
      <div class="container mx-auto text-center relative z-10">
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-montserrat-alt font-light text-white mb-6">
          ¿Listo para comenzar tu proyecto?
        </h2>
        
        <p class="text-lg text-white/60 max-w-2xl mx-auto mb-10">
          Cuéntanos tu idea y te ayudamos a convertirla en realidad. Sin compromiso.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/contacto"
            class="px-8 py-4 bg-gradient-to-r from-cyan-500 to-blue-500 text-white font-medium rounded-full transition-all duration-300 hover:shadow-glow hover:scale-105"
          >
            Iniciar Proyecto
          </a>
          <a 
            href="https://wa.me/528136600062"
            target="_blank"
            class="px-8 py-4 border border-white/20 text-white font-medium rounded-full transition-all duration-300 hover:bg-white/10"
          >
            Hablar por WhatsApp
          </a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>
