---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Navbar from '@/components/Navbar.astro';
import Footer from '@/components/Footer.astro';
import ResponsiveImage from '@/components/ResponsiveImage.astro';

const seoData = {
  title: 'Portafolio | Gemini Software - Proyectos de Desarrollo Web, Apps y Software',
  description: 'Descubre nuestro portafolio de proyectos: desarrollo web, aplicaciones m√≥viles, software empresarial y m√°s. Casos de √©xito reales de empresas en M√©xico y Latinoam√©rica.',
};

// Fetch projects from backend API
const API_URL = import.meta.env.PUBLIC_API_URL || 'http://localhost:3001/api';

let projects: any[] = [];
let categories: string[] = ['Todos'];

try {
  const response = await fetch(`${API_URL}/projects`);
  const data = await response.json();
  if (data.success && data.data) {
    projects = data.data;
    const uniqueCategories = [...new Set(projects.map((p: any) => p.category))] as string[];
    categories = ['Todos', ...uniqueCategories];
  }
} catch (error) {
  console.error('Error fetching projects:', error);
  // Fallback to empty projects - page will still render
}

const featuredProjects = projects.filter((p: any) => p.featured);
