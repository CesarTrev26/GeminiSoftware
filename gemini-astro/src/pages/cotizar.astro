<script>
  // Auto-detect API URL based on environment
  const API_URL = (() => {
    const hostname = window.location.hostname;
    
    // Production
    if (hostname === 'geminisoftware.mx' || hostname === 'www.geminisoftware.mx') {
      return 'https://gemini-backend.fly.dev/api';
    }
    
    // Vercel preview deployments
    if (hostname.includes('vercel.app')) {
      return 'https://gemini-backend.fly.dev/api';
    }
    
    // Local development
    return 'http://localhost:3001/api';
  })();

  const form = document.getElementById('quoteForm') as HTMLFormElement;
  const submitBtn = document.getElementById('submitBtn') as HTMLButtonElement;
  const submitText = document.getElementById('submitText') as HTMLSpanElement;
  const submitLoader = document.getElementById('submitLoader') as HTMLSpanElement;
  const successMessage = document.getElementById('successMessage') as HTMLDivElement;
  const errorMessage = document.getElementById('errorMessage') as HTMLDivElement;

  // Mostrar/ocultar opciones de tienda
  const hasStoreInputs = document.querySelectorAll('input[name="hasStore"]');
  const storeOptions = document.getElementById('storeOptions');

  hasStoreInputs.forEach(input => {
    input.addEventListener('change', (e) => {
      const target = e.target as HTMLInputElement;
      if (target.value === 'S√≠') {
        storeOptions?.classList.remove('hidden');
      } else {
        storeOptions?.classList.add('hidden');
      }
    });
  });

  // Mostrar/ocultar campo de funciones personalizadas
  const featuresOtherCheckbox = document.getElementById('featuresOther') as HTMLInputElement;
  const customFeaturesContainer = document.getElementById('customFeaturesContainer') as HTMLDivElement;

  featuresOtherCheckbox?.addEventListener('change', () => {
    if (featuresOtherCheckbox.checked) {
      customFeaturesContainer?.classList.remove('hidden');
    } else {
      customFeaturesContainer?.classList.add('hidden');
      // Clear the textarea when hidden
      const customFeaturesTextarea = document.getElementById('customFeatures') as HTMLTextAreaElement;
      if (customFeaturesTextarea) {
        customFeaturesTextarea.value = '';
      }
    }
  });

  // Manejar env√≠o del formulario
  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    // Deshabilitar bot√≥n
    submitBtn.disabled = true;
    submitText.classList.add('hidden');
    submitLoader.classList.remove('hidden');
    successMessage.classList.add('hidden');
    errorMessage.classList.add('hidden');

    // Recopilar datos del formulario
    const formData = new FormData(form);
    
    // Procesar checkboxes m√∫ltiples
    const visualIdentity: string[] = [];
    const pages: string[] = [];
    const features: string[] = [];
    const storeFeatures: string[] = [];

    formData.getAll('visualIdentity').forEach((val) => visualIdentity.push(val as string));
    formData.getAll('pages').forEach((val) => pages.push(val as string));
    formData.getAll('features').forEach((val) => features.push(val as string));
    formData.getAll('storeFeatures').forEach((val) => storeFeatures.push(val as string));

    const data = {
      companyName: formData.get('companyName'),
      businessType: formData.get('businessType'),
      websiteGoal: formData.get('websiteGoal'),
      platform: formData.get('platform'),
      platformReason: formData.get('platformReason'),
      hasDesign: formData.get('hasDesign'),
      visualIdentity,
      inspirationUrls: formData.get('inspirationUrls'),
      pageCount: formData.get('pageCount'),
      pages,
      customPages: formData.get('customPages'),
      features,
      customFeatures: formData.get('customFeatures'),
      hasStore: formData.get('hasStore') === 'si',
      productCount: formData.get('productCount'),
      storeFeatures,
      contentProvider: formData.get('contentProvider'),
      needsTraining: formData.get('needsTraining') === 'si',
      supportPeriod: formData.get('supportPeriod'),
      launchDate: formData.get('launchDate'),
      additionalInfo: formData.get('additionalInfo'),
      contactEmail: formData.get('contactEmail'),
      contactPhone: formData.get('contactPhone')
    };

    try {
      const response = await fetch(`${API_URL}/quotes`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(data),
      });

      if (!response.ok) {
        const errorData = await response.json().catch(() => ({}));
        throw new Error(errorData.error || 'Error al enviar la solicitud');
      }

      // Mostrar mensaje de √©xito y ocultar formulario
      form.classList.add('hidden');
      successMessage.classList.remove('hidden');
      errorMessage.classList.add('hidden');

      // Scroll al mensaje
      successMessage.scrollIntoView({ behavior: 'smooth', block: 'center' });

    } catch (error) {
      console.error('Error submitting form:', error);
      
      // Mantener el formulario visible con todos los datos
      form.classList.remove('hidden');
      successMessage.classList.add('hidden');
      errorMessage.classList.remove('hidden');
      
      // Scroll al mensaje de error (arriba del formulario)
      errorMessage.scrollIntoView({ behavior: 'smooth', block: 'start' });
    } finally {
      // Reactivar bot√≥n
      submitBtn.disabled = false;
      submitText.classList.remove('hidden');
      submitLoader.classList.add('hidden');
    }
  });
</script>